<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context=".ui.explore.ExploreFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/titile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Explore"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/search_bar"
                    android:layout_width="@dimen/search_button_width"
                    android:layout_height="@dimen/search_bar_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_bt_search"
                    android:elevation="2dp"
                    android:transitionName="@string/transition_search_bar">

                    <ImageButton
                        android:id="@+id/searchback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_search_24dp"
                        android:tint="#fff"
                        android:transitionName="@string/transition_search_back" />

                </FrameLayout>

            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_genre"
                style="@style/GenreTabStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:transitionGroup="false"
                app:tabMode="scrollable" />
        </LinearLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager_genre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:transitionGroup="false" />

    </LinearLayout>

</layout>
