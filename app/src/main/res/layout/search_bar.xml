<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="2dp"
    android:background="@color/scrim"
    android:transitionName="@string/transition_scrim">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Title"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/search_bar"
        android:layout_width="@dimen/search_button_width"
        android:layout_height="@dimen/search_bar_height"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_bt_search"
        android:elevation="2dp"
        android:transitionName="@string/transition_search_bar">

        <ImageButton
            android:id="@+id/search_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_search_24dp"
            android:tint="#fff"
            android:transitionName="@string/transition_search_back" />

    </FrameLayout>

</LinearLayout>