<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="400"
    android:interpolator="@android:interpolator/fast_out_slow_in"
    android:transitionOrdering="together">

    <targets>
        <target android:excludeId="@android:id/navigationBarBackground" />
        <target android:excludeId="@android:id/statusBarBackground" />
        <target android:excludeId="@id/img_wrapper" />
        <target android:excludeId="@id/top_manga_list" />
        <target android:excludeId="@id/section_title" />
<!--        <target android:excludeId="@id/bt_back" />-->
    </targets>

    <slide android:slideEdge="right">
        <targets>
            <target android:targetId="@id/title" />
            <target android:targetId="@id/status" />
            <target android:targetId="@id/viewed" />
            <target android:targetId="@id/followed" />
            <target android:targetId="@id/genres" />
        </targets>
    </slide>
    <slide android:slideEdge="top">
        <targets>
            <target android:targetId="@id/bt_back" />
            <target android:targetId="@id/bt_download" />
            <target android:targetId="@id/bt_bookmark" />
        </targets>
    </slide>
    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/chap_list" />
            <target android:targetId="@id/description" />
        </targets>
    </slide>

    <fade
        android:duration="600"
        android:fadingMode="fade_in"
        android:startDelay="100">
        <targets>
            <target android:targetId="@id/toolbar_view" />
            <target android:targetId="@id/scrim" />
        </targets>
    </fade>
</transitionSet>